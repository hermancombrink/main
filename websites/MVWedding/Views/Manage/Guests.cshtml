@{
    Layout = null;
}
<div class="row  text-center">
    <h2 class="text-center" style="display: inline-block">Manage Guests</h2>
</div>
<div class="row">
    <button type="button" class="btn btn-success btn-lg btn-commit" ng-click="SaveChanges()">
        Save
    </button>
</div>
<div class="row">
    <div class="span4">
        <h3>Current Guests
        </h3>
    </div>
</div>
<div class="row">
    <div class="span8 additem">
        <ul>
            <li ng-repeat="item in Guests" class="listnone">
                <div class="span2">{{$index+1}}. {{item.PersonType.PersonTypeDesc}}</div>
                <div class="span2">{{item.Name}}  {{item.Surname}}</div>
                <div class="span1">{{item.GuestCount}}</div>
                <div class="span2">
                    <button class="btn btn-primary btn-xs glyphicon glyphicon-ok-circle" ng-click="UpdateItem(item)"></button>
                    <button class="btn btn-danger btn-xs glyphicon glyphicon-ban-circle" ng-click="RemoveItem(item)"></button>
                </div>
            </li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="span8 additem">
        <div class="span3">
            <label>Name</label><input type="text" required ng-model="CurrentGuest.Name" />
        </div>
        <div class="span3">
            <label>Surname</label><input type="text" required ng-model="CurrentGuest.Surname" />
        </div>

        <div class="span3" ng-show="GuestCount > 1">
            <label>+1 Name</label><input type="text" required ng-model="CurrentGuest.FirstGuestName" />
        </div>
        <div class="span3" ng-show="GuestCount > 1">
            <label>+1 Surname</label><input type="text" required ng-model="CurrentGuest.FirstGuestSurname" />
        </div>
        <div class="span3">
            <label>Email</label><input type="email" ng-model="CurrentGuest.Email" />
        </div>
        <div class="span3">
            <label>Cell #</label><input type="text" ng-model="CurrentGuest.Cellphone" />
        </div>
        <div class="span3">
            <label>Amount of Guest</label><input type="number" required ng-model="GuestCount" />
        </div>
        <div class="span3">
            <label>Type</label>
            <select ng-required ng-model="CurrentGuest.PersonType" ng-options="PersonType.PersonTypeDesc for PersonType in PersonTypes track by PersonType.ID">
                <option value="">-- select type --</option>
            </select>
        </div>

    </div>
</div>
<div class="row" ng-show="isUpdate === false">
    <div class="span8">
        <button type="button" class="btn btn-success btn-lg pull-right" ng-click="AddPerson()">Add</button>
    </div>
</div>
<div class="row" ng-show="isUpdate === true">
    <div class="span8">
        <button type="button" class="btn btn-success btn-lg pull-right" ng-click="AddPerson()" style="margin-left: 10px;">Update</button>
        &nbsp;
        <button type="button" class="btn btn-success btn-lg pull-right" ng-click="Reset()">Reset</button>&nbsp;
    </div>
</div>
